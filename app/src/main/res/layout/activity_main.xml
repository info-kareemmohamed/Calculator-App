<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/_20sdp"
        android:gravity="right"
        android:padding="@dimen/_10sdp"
        android:text=""
        android:textColor="@color/gray"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/_25ssp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/number_grid"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="right"
        android:padding="@dimen/_10sdp"
        android:text="0"
        android:textColor="@color/white"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/_50ssp" />


    <GridLayout
        android:id="@+id/number_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:columnCount="4"
        android:padding="@dimen/_5sdp"
        android:rowCount="5">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/c_bttn"
            style="@style/main_style"
            android:background="@drawable/option_bttn"
            android:text="AC"
            android:textColor="@color/black"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/change_operator_bttn"
            style="@style/main_style"
            android:background="@drawable/option_bttn"
            android:text="+/-"
            android:textColor="@color/black"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mod_bttn"
            style="@style/main_style"
            android:background="@drawable/option_bttn"
            android:text="%"
            android:textColor="@color/black"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/division_bttn"
            style="@style/main_style"
            android:layout_width="wrap_content"
            android:background="@drawable/operator_bttn"
            android:text="/"
            android:textColor="@color/white"
            app:backgroundTint="@null" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/even_bttn"
            style="@style/main_style"
            android:background="@drawable/number_bttn"
            android:text="7"
            android:textColor="@color/white"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/eight_bttn"
            style="@style/main_style"
            android:background="@drawable/number_bttn"
            android:text="8"
            android:textColor="@color/white"
            app:backgroundTint="@null" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/nine_bttn"
            style="@style/main_style"
            android:background="@drawable/number_bttn"
            android:text="9"
            android:textColor="@color/white"
            app:backgroundTint="@null" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/multiply_bttn"
            style="@style/main_style"
            android:background="@drawable/operator_bttn"
            android:text="X"
            android:textColor="@color/white"
            app:backgroundTint="@null" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/four_bttn"
            style="@style/main_style"
            android:background="@drawable/number_bttn"
            android:text="4"
            android:textColor="@color/white"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/five_bttn"
            style="@style/main_style"
            android:background="@drawable/number_bttn"
            android:text="5"
            android:textColor="@color/white"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/six_bttn"
            style="@style/main_style"
            android:background="@drawable/number_bttn"
            android:text="6"
            android:textColor="@color/white"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/minus_bttn"
            style="@style/main_style"
            android:background="@drawable/operator_bttn"
            android:text="-"
            android:textColor="@color/white"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/one_bttn"
            style="@style/main_style"
            android:background="@drawable/number_bttn"
            android:text="1"
            android:textColor="@color/white"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/two_bttn"
            style="@style/main_style"
            android:background="@drawable/number_bttn"
            android:text="2"
            android:textColor="@color/white"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/three_bttn"
            style="@style/main_style"
            android:background="@drawable/number_bttn"
            android:text="3"
            android:textColor="@color/white"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Plus_bttn"
            style="@style/main_style"
            android:background="@drawable/operator_bttn"
            android:text="+"
            android:textColor="@color/white"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/zero_bttn"
            style="@style/main_style"
            android:layout_columnSpan="2"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/zero_bttn"
            android:text="0"
            android:textColor="@color/white"
            app:backgroundTint="@null" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/dot_bttn"
            style="@style/main_style"
            android:background="@drawable/number_bttn"
            android:text="."
            android:textColor="@color/white"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/equals_bttn"
            style="@style/main_style"
            android:background="@drawable/operator_bttn"
            android:text="="
            android:textColor="@color/white"
            app:backgroundTint="@null" />

    </GridLayout>


</RelativeLayout>